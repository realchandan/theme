<resources>

    <style name="CommonAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Attrs -->
        <item name="toolbar_color">@color/dark3</item>
        <item name="toolbar_text">@android:color/white</item>
        <item name="backgroundcolor">@color/dark1</item>
        <item name="toolbar_text_secondary">@android:color/white</item>
        <item name="textcolor">@android:color/black</item>
        <item name="textcolor2">@android:color/white</item>
        <item name="statusbarcolor">?toolbar_color</item>
        <!-- Theme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Others -->
        <item name="android:textColor">?textcolor</item>
        <item name="android:textColorPrimary">?textcolor</item>
        <item name="android:textColorSecondary">?toolbar_text_secondary</item>
        <item name="android:statusBarColor">?statusbarcolor</item>
        <item name="android:colorBackground">?backgroundcolor</item>
        <item name="android:itemBackground">?backgroundcolor</item>
        <item name="android:actionModeBackground">?toolbar_color</item>
        <!-- Custom -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
        <item name="actionModeStyle">@style/CommonAms</item>
        <item name="alertDialogTheme">@style/MadL</item>
        <item name="materialAlertDialogTheme">@style/MadL</item>
    </style>
    <!-- Action Mode -->
    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?textcolor</item>
    </style>

    <style name="CommonAms" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?toolbar_color</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>
    <!-- Alert Dialog -->
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">?textcolor</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">?textcolor</item>
    </style>

    <style name="MadL" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">?backgroundcolor</item>
        <item name="android:textColorPrimary">?textcolor</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>
</resources>
